<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NeRecipeApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="textInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="icon_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="fullWidthTextInputLayout" parent="textInputLayout">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/purple_700</item>
    </style>

    <style name="fullWidthButton" parent="button">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="section_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">@dimen/section</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recipe_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recipe_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/app_padding_less</item>
        <item name="android:paddingEnd">@dimen/app_padding_less</item>
        <item name="android:layout_marginEnd">@dimen/app_padding_less</item>
        <item name="android:layout_marginBottom">@dimen/app_padding_less</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:background">@drawable/transparent_black_rounded_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/recipe_time_size</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>
    <style name="Widget.AppTheme.OptionsButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_more_24</item>
        <item name="android:background">@drawable/transparent_black_rounded_background</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <style name="Widget.AppTheme.Like" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_like_24</item>
        <item name="iconTint">@color/like_tint</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>

    <style name="text_full_width" parent="text">
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>